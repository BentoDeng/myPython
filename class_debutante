#!/usr/bin/env Python3
#-*-  coding:utf-8 -*-

class Person:
    def __init__(self,name, age, height, weight):
        self.name=name
        self.age=age
        self.weight=weight
        self.height=height

    def print_person(self):
        print ("姓名", self.name)
        print ("年龄", self.age)
        print("身高", self.height)
        print("体重", self.weight)

person1= Person("Bento",25,175,67)
print(person1)
person1.print_person()
